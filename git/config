[alias]
	a = add
	aa = add --all
	alias = !git config --list | grep alias | cut -c 7-
	amend = commit --amend --reuse-message HEAD
	br = branch
	c = commit
	ci = commit --message
	cia = commit --all --message
	co = checkout
	di = diff
	dins = diff --name-status
	dt = difftool
	dtd = difftool --dir-diff
	la = log --branches --date=short --graph --all --pretty=format:'%Cred%h%Creset %Cblue%ad%Creset %C(yellow)%aN%Creset %s%C(bold green)%d%Creset' --topo-order
	l = !git la -10
	praise = blame
	rup = remote update --prune
	st = status
	undo = reset --soft HEAD^
	who = shortlog --numbered --summary

[apply]
	whitespace = warn

[color]
	branch = true
	diff = true
	interactive = true
	pager = true
	status = true
	ui = true

[commit]
	template = ~/.config/git/stCommitMsg

[core]
	editor = nvim
	excludesfile = ~/.config/git/ignore_global

[diff]
	tool = bcomp
	; tool = diffmerge
	; tool = opendiff
	; tool = sourcetree
	; tool = vimdiff

[difftool]
	prompt = false

[difftool "bcomp"]
	cmd = "/usr/local/bin/bcomp" "$LOCAL" "$REMOTE"
	trustExitCode = true

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"

[merge]
	tool = bcomp

[mergetool]
	prompt = false

[mergetool "bcomp"]
	cmd = "/usr/local/bin/bcomp" "$LOCAL" "$REMOTE" "$BASE" "$MERGED"
	trustExitCode = true

[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[rebase]
	autoSquash = true
	missingCommitsCheck = warn
	stat = true

[push]
	default = simple

[user]
	email = ithomas@netapp.com
	name = Thomas Ingram
